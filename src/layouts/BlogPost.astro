---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
type Props = CollectionEntry<'blog'>['data'];
const { title, description, pubDate, updatedDate, heroImage, frontmatter } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<main class="">
			<section class=" ">
				<article class="">
					<div class="post-head grad-bg">
						<div class="mx-auto w-full container-w text-left">
							<h1 class="title grad-heading">{title}</h1>
							<h2 class="desc">{description}</h2>
							<FormattedDate date={pubDate} />
							<!--
								{
									updatedDate && (
										<div class="last-updated-on">
											Last updated on <FormattedDate date={updatedDate} />
										</div>
									)
								}
							-->
							<!-- <span>{frontmatter.estReadingTime} min read</span> -->
						</div>
					</div>
					<div class="post-content mx-auto w-full container-w text-left prose">
						<!-- {heroImage && <img width={720} height={360} src={heroImage} alt="" />} -->
						<slot />
					</div>
				</article>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.title {
		font-size: 4rem;
		font-weight: 900;
		letter-spacing: 1px;
		line-height: 1.7;
		padding-bottom: 1rem;
	}
	.desc {
		font-size: 2.4rem;
		font-weight: 300;
		padding-bottom: 1.5rem;
	}

	.last-updated-on {
		font-style: italic;
	}

	.post-head {
		color: #151931;
		padding: 8rem 4rem 5rem;
	}
	.post-content {
		position: relative;
		font-size: 1.8rem;
		font-weight: 300;
		letter-spacing: 0.3px;
		line-height: 1.75;
		padding-top: 3rem;
		padding-bottom: 4rem;
	}
</style>