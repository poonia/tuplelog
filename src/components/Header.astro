---
import HeaderLink from './HeaderLink.astro';
import { SITE } from '../consts';
import SvgIcon from './SvgIcon.astro'
---

<header class="header max-w-full ">
	 <!-- 🫧🕸️ 🏔️ ⛩️ 🧿 🌀 ⌘ 🀤 -->
	<div class="container-w header-container">
		<a href="/" class="brand">
			🌀 { SITE.nameToken.initial }<span class="highlight">{ SITE.nameToken.last }</span>
		</a>
		<nav class="navigation">
			<ul class="list-none flex">
				<li class="nav-item">
					<a href="/blog" title="blog" class="nav-link highlight"> Blogs </a>
				</li>
				<li class="nav-item">
					<a href="/about" title="about" class="nav-link highlight"> About </a>
				</li>
				<!-- <li class="highlight">
					<a href="/rss.xml" title="RSS">
						<SvgIcon>
							<path d="M4 11a9 9 0 0 1 9 9"></path>
							<path d="M4 4a16 16 0 0 1 16 16"></path>
							<circle cx="5" cy="19" r="1"></circle>
						</SvgIcon>
					</a>
				</li> -->
			</ul>
		</nav>
	</div>
</header>

<style>
	/* Header */
	.header {
		display: flex;
		height: 40px;
		background: transparent;
		width: 100%;
		padding: 0 var(--edge-gutter);
		justify-content: center;
	}
	.header-container {
		display: flex;
		flex-grow: 1;
		justify-content: space-between;
		align-items: center;
	}
	.brand {
		font-size: 1.8rem;
		font-weight: 800;
		line-height: 2.2rem;
		letter-spacing: .2px;
		-webkit-font-smoothing: antialiased;
		text-transform: uppercase;
		font-family: var(--font-family-sans);
		color: var(--color-primary);
	}
	.brand:hover {
		text-decoration: none !important;
	}
	.brand span {
		font-weight: 900;
		padding: 0 3px;
		letter-spacing: .8px;
	}
	.nav-item {
		padding: 0 1rem;
	}
	.nav-link {
		font-family: var(--font-family-serif-primary);
	}


</style>

