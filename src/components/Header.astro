<style>
	/* Header */
	.header {
		display: flex;
		height: 40px;
		background: transparent;
		width: 100%;
		padding: 0 var(--edge-gutter);
		justify-content: center;
	}
	.header-container {
		display: flex;
		flex-grow: 1;
		justify-content: space-between;
		align-items: center;
	}
	.nav-item {
		padding: 0 1rem;
	}
	.nav-link {
		font-family: var(--font-family-serif-primary);
	}
</style>

